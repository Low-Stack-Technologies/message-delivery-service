{
  "name": "@lowstacktechnologies/mds-client",
  "version": "1.0.0",
  "description": "TypeScript client library for the Message Delivery Service",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mds-cli": "dist/cli.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node && bun build src/cli.ts --outdir dist --target node",
    "cli": "bun run src/cli.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@noble/ed25519": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "mds",
    "message-delivery-service",
    "email",
    "sms",
    "ed25519"
  ],
  "author": "Low Stack Technologies",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Low-Stack-Technologies/message-delivery-service.git",
    "directory": "clients/js"
  }
}
